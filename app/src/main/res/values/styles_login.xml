<resources>

    <!-- Base application theme. -->
    <style name="StyleLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonStyle">@style/StyleLogin.ButtonStyle</item>
        <item name="editTextColor">@color/colorPrimary</item>
    </style>

    <style name="StyleLogin.ButtonStyle">
        <item name="android:background">@drawable/shape_button_circle_gradient</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>

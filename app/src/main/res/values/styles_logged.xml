<resources>

    <!-- Base application theme. -->
    <style name="StyleLogged" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorLetter</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="buttonStyle">@style/StyleLogged.ButtonStyle</item>
    </style>

    <style name="StyleLogged.ButtonStyle">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_button_circle_gradient</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
